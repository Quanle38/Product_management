extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug
block main
    +alert-success("5000")
    +box-head('Danh sách sản phẩm')
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body
            .row
                .col-6
                    each item in filterStatus
                        button(
                            class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
                            button-status=item.status
                        ) #{item.name}
                .col-6
                    form(id="form-search")
                        .input-group.position-relative
                            input(
                                type="text"
                                placeholder="Nhập từ khóa"
                                name="keyword"
                                value=keyword
                                class="form-control"
                                id="search-input"
                            )
                            if (keyword)
                                a(
                                    id="clear-search"
                                    title="Xóa tìm kiếm"
                                    style="position: absolute; right: 100px; top: 50%; transform: translateY(-50%); cursor: pointer; color: red; text-decoration: none; font-weight: bolder"
                                ) &times;
                            button(
                                class="btn btn-success"
                                type="submit"
                            ) Tìm kiếm
    .card.mb-3 
        .card-header Danh sách
        .card-body
            .row 
                    .col-8 
                        h2 Viet sau
                    .col-4 
                        a(
                            href=`${prefixAdmin}/products/create`
                            class="btn btn-outline-success"
                        ) + Thêm mới
            table.table.table-hover.table-sm
                thead
                    tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành động
                tbody
                    each item, index in products
                        tr
                            td #{index + 1}
                            td
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px" 
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price}
                            td 
                                if(item.status === "active")
                                    a(
                                        href="javascript:;" 
                                        class="badge badge-success"
                                        data-status=item.status 
                                        data-id=item.id 
                                        button-change-status

                                        ) Hoạt động
                                else 
                                    a(
                                        href="javascript:;" 
                                        class="badge badge-danger"
                                        data-status=item.status 
                                        data-id=item.id 
                                        button-change-status
                                     ) Dừng hoạt động
                            td 
                                button(class="btn btn-warning btn-sm") Sửa
                                button(class="btn btn-danger btn-sm ml-1" delete-product product-id=item._id) Xóa

    +pagination(currentPage,totalPage)

    form(
        action="",
        method ="POST",
        id="form-delete-product",
        data-path=`${prefixAdmin}/products/delete`
    )

    form(
        action="",
        method ="POST",
        id="form-change-status",
        data-path=`${prefixAdmin}/products/change-status`
    )
    


    script(src="/admin/js/product.js")

    
