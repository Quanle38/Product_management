extends ../../layouts/default.pug

block main
    include ../../mixins/box-head.pug
    +box-head('Danh sách sản phẩm')
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body
            .row
                .col-6
                    each item in filterStatus
                        button(
                            class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
                            button-status=item.status
                        ) #{item.name}
                .col-6
                    form(id="form-search")
                        .input-group.position-relative
                            input(
                                type="text"
                                placeholder="Nhập từ khóa"
                                name="keyword"
                                value=keyword
                                class="form-control"
                                id="search-input"
                            )
                            if (keyword)
                                a(
                                    id="clear-search"
                                    title="Xóa tìm kiếm"
                                    style="position: absolute; right: 100px; top: 50%; transform: translateY(-50%); cursor: pointer; color: red; text-decoration: none; font-weight: bolder"
                                ) &times;
                            button(
                                class="btn btn-success"
                                type="submit"
                            ) Tìm kiếm
    .card.mb-3 
        .card-header Danh sách
        .card-body
            table.table.table-hover.table-sm
                thead
                    tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành động
                tbody
                    each item, index in products
                        tr
                            td #{index + 1}
                            td
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px" 
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price}
                            td 
                                if(item.status === "active")
                                    a(href="a" class="badge badge-success") Hoạt động
                                else 
                                    a(href="a" class="badge badge-danger") Dừng hoạt động
                            td 
                                button(class="btn btn-warning btn-sm") Sửa
                                button(class="btn btn-danger btn-sm ml-1" delete-product product-id=item._id) Xóa

    nav(aria-label="Pagination")
        ul.pagination.justify-content-center
            //- Nút Previous (ẩn nếu ở trang 1)
            li.page-item(class=(currentPage === 1 ? 'disabled' : ''))
                a.page-link(button-pagination="prev") «

            //- Các trang
            if(totalPage > 1)
               - for(let page = 1; page <= totalPage; page ++)
                    li.page-item(class=(page === currentPage ? 'active' : ''))
                        a.page-link(page-pagination=page) #{page}
            else 
                li.page-item(class='active')
                    a.page-link() 1

            //- Nút Next (ẩn nếu ở trang 3)
            li.page-item(class=(currentPage === totalPage ? 'disabled' : ''))
                a.page-link(button-pagination="next") »
